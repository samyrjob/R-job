<h1>Nouvelle offre</h1>
<h3> Rédiger une nouvelle offre </h3>



<%= simple_form_for ([@company, @offer]) do |f| %>
  <%= f.input :function, :label => "Poste" %>
  <%= f.input :description, as: :text, :label => "Description",  placeholder: "Missions/ Profile / Key details ..." %>
  <%= f.input :town, :label => "Ville"%>
  <div class="yeah2">
    <%= f.input :salary, as: :float, :label => "Rémunération (mensuelle)" %>
    <i class="fa-sharp fa-solid fa-euro-sign"></i>
  </div>
  <%= f.input :images,
                  label: 'Télécharge ton CV !',
                  as: :file,
                  required: true,
                  autofocus: true,
                  input_html: { multiple: true, autocomplete: "images"} %>
  <%= f.input :start_date, as: :date, :label => "Date de début" %>
  <%= f.input :duration, as: :integer, :label => "Durée (mois)" %>
  <%= f.submit 'Publier', class: "btn btn-primary" %>
<% end %>
