<div class="cover-index">
  <div class="search">
    <i class="fa fa-search" aria-hidden="true"></i>
    <%= form_with url: offers_path, method: :get, class: "d-flex me-1 pt-2 relative mx-auto text-gray-600" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control border-2 border-gray-300 bg-white h-10 px-5 pr-16 rounded-lg text-sm focus:outline-none",
        placeholder: ""
      %>
      <%= submit_tag "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


 <div class="col pt-1" data-controller="search">
        <div class="d-flex" style="padding:10px">
          <button class="btn btn-primary btn-lg" data-action="click->search#panel" data-search-target="button" style="margin-top: 10px"> Recherche avancée</button>
        </div>

        <div href="#" class="yeahh d-none" data-search-target="link" style="padding: 10px">
          <%= form_for @search, html: {class: "pure-form"} do |f| %>
            <div class="field">
              <%=f.label :Mots_Clefs %> <br>
              <%= f.text_field :keywords %>
            </div>
            <div class="field">
              <%=f.label :Secteur %> <br>
              <%=f.select :sector, options_for_select(@sectors), :include_blank => true %>
            </div>
            <div class="field">
              <%=f.label :Ville %> <br>
              <%=f.select :town, options_for_select(@towns), :include_blank => true %>
            </div>
            <div class="field">
              <%= f.label :Date_de_début %> <br>
              <%= f.date_field :start_date %>
            </div>
            <div class="field">
            <p><%= f.label :min_duration, "Durée minimale" %> - <%= f.number_field :min_duration, size: 10 %> </p>
            <p><%= f.label :max_duration, "Durée maximale" %> - <%= f.number_field :max_duration, size: 10 %> </p>
            </div>
            <div class="field">
            <p><%= f.label :min_salary, "Salaire minimum" %> - <%= f.number_field :min_salary, size: 10, step: :any %> </p>
            </div>

            <%# Admin?    : <%= f.check_box :admin %>
            <div class="actions"><%= f.submit "Search", class: "btn btn-primary"%></div>
          <% end %>
        <button class="btn btn-success" data-action="click->search#reset" style="margin-top: 10px"> Retour </button>
        </div>
        <div class="opaq opacity-50 d-none" data-search-target="panel"></div>
  </div>


